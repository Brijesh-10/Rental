<body>
    <form action="/" method="post">
    <div class="h-header">
        <div class="h-container">
            <div class ="h-navbar">
                <div class="logo">
                    <img src="#logo" width="125px">
                </div>
                <nav>
                    <ul>
                        {{#unless tips}}
                        <li><button><a href="sign_up">Register</a></button></li>
                        <li><button><a href="sign_in">Sign in </a></button></li>{{/unless}}
                        <li><button><a href="cart">Cart</a></button></button></li>
