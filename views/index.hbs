                </div>
                    <div class="h-col-2" align="right"><img src="./pic/hadd.jpeg"></div>
            </div> 
        </div>
    </div>   
     <categories--------></categories--------> 
     
        <div class="h-categories" >
            <div class="h-small-container">
                <h2 class="Ac">AIR-CONDITIONER</h2>
                <div class="h-row">{{#each x}}
                    <div class="h-col4">
                        <img src="./pic/upload/{{this.img}}">
                       <button name="pd" value="{{this.pid}}">{{this.pname}}</button>
                        <p>Rs{{this.rent}}/day</p>
                    </div>{{/each}}
                </div>
                <h2 class="camera">Speaker</h2>
                <div class="h-row">{{#each z}}
                    <div class="h-col4">
                        <img src="./pic/upload/{{this.img}}">
                        <button name="pd" value="{{this.pid}}">{{this.pname}}</button>
                        <p>Rs{{this.rent}}/day</p>
                    </div>{{/each}}
                </div>
                <h2 class="tv">SMART-TV</h2>
                <div class="h-row">{{#each y}}
                    <div class="h-col4">
                        <img src="./pic/upload/{{this.img}}">
                       <button name="pd" value="{{this.pid}}">{{this.pname}}</button>
                        <p>Rs{{this.rent}}/day</p>
                    </div>{{/each}}
                </div>
            </div>
        </div>
        </form>
    <!--profile page-->
    <div class="popup-overlay">
    <div class="profile-box">
        <div class="popup-close-btn">&times;</div>
        <img src="./pic/proicon.png" class="profile-pic">
        <img src="#img1" class="setting-icon">{{#unless z}}
        <h2>{{this.fname}} {{this.lname}}</h2>
        <div class="pro-details">
            <div class="details"><p>{{this.email}}</p><p>{{this.mno}}</p></div>{{/unless}} 
            <div class="details-name"><h3>email-id:</h3><h3>Mobile-no:</h3><h3>Yours Order:</h3></div>   
        
       </div>
    </div>
    <script src="./js/profile.js"></script>
